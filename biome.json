{
	"$schema": "https://biomejs.dev/schemas/1.4.1/schema.json",
	"organizeImports": {
		"enabled": true
	},
	"files": {
		"ignore": [
			"src/schema/parser/generated/grammar.ts",
			"tsconfig.base.json",
			"tsconfig.json"
		]
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"correctness": {
				"noUndeclaredVariables": "error",
				"noUnusedVariables": "error"
			},
			"style": {
				"noNamespace": "error"
			}
		}
	},
	"formatter": {
		"indentStyle": "space"
	}
}